# Application Settings
APP_NAME="OX Prediction API"
PROJECT_NAME="OX Predict API"
API_V1_STR="/api/v1"
ENVIRONMENT=development
DEBUG=true

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=ox_universe
POSTGRES_SCHEMA=crypto

# Alternative: Full database URL (if above individual settings are not used)
DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/ox_universe
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_STATE_EXPIRE_MINUTES=10

# External APIs
ALPHA_VANTAGE_API_KEY=demo
EOD_FETCH_RETRY_COUNT=3

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SQS_ENDPOINT_URL=http://localhost:4566

# SQS Queue Names
SQS_EOD_FETCH_QUEUE=ox-eod-fetch
SQS_SETTLEMENT_QUEUE=ox-settlement
SQS_POINTS_AWARD_QUEUE=ox-points-award

# SQS Queue URLs (optional, can be auto-generated)
SQS_EOD_FETCH_QUEUE_URL=
SQS_SETTLEMENT_COMPUTE_QUEUE_URL=
SQS_POINTS_AWARD_QUEUE_URL=

# Business Rules
POINTS_WIN_REWARD=100
POINTS_VOID_REWARD=0
BASE_PREDICTION_SLOTS=3
MAX_AD_SLOTS=7
COOLDOWN_MINUTES=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
DEFAULT_RATE_LIMIT=100

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourapp.com"]

# Timezone
TIMEZONE=Asia/Seoul